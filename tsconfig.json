{
  "compilerOptions": {
    "target": "ES6", // ECMAScript version to compile to
    "module": "CommonJS", // Module system
    "outDir": "./dist/", // Output directory for compiled JavaScript files
    "rootDir": "./", // Base directory for source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Allow interoperability with ES modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "skipLibCheck": true, // Skip type-checking of declaration files
    "resolveJsonModule": true, // Allow importing JSON modules
    "baseUrl": ".", // Base directory for module resolution
    "paths": {
      "@controllers/*": ["src/controllers/*"], // Path mapping for controllers
      "@models/*": ["src/models/*"], // Path mapping for models
      "@routes/*": ["src/routes/*"], // Path mapping for routes
      "@services/*": ["src/services/*"], // Path mapping for services
      "@utils/*": ["src/utils/*"] // Path mapping for utilities
    }
  },
  "include": ["src/**/*"], // Include all TypeScript files in `src`
  "exclude": ["node_modules", "dist", "tests"] // Exclude non-source files
}
